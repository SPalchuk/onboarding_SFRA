<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <field
        formid="Nname"
        label="label.input.lastname.profile"
        mandatory="false"
        max-length="50"
        type="string" />

    <field
        formid="Nemail"
        label="label.input.email.profile"
        mandatory="true"
        max-length="50"
        regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
        type="string" />
</form>